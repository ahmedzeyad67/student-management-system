<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/show-all-page.css" />
    <title>Courses</title>
    <link rel="icon" href="/icons/logo.svg" />
  </head>
  <body>
    <div class="page-container">
      <div class="content-container">
        <div class="header">
          <h1>Course Management</h1>
        </div>
        <div class="content">
          <div class="actions-bar">
            <a href="/courses/new" class="btn">Add New Course</a>
            <a href="../" class="btn">Back to home page</a>
          </div>

          <h2 class="table-title">Course List</h2>
          <% if (courses && courses.length > 0) { %>

          <div class="table-container">
            <table>
              <thead>
                <tr>
                  <th>Code</th>
                  <th>Title</th>
                  <th>Department</th>
                  <th>Credit Hours</th>
                  <th>Status</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% courses.forEach(course => { %>
                <tr>
                  <td><%= course.courseCode %></td>
                  <td><%= course.title %></td>
                  <td><%= course.department %></td>
                  <td><%= course.creditHours %></td>
                  <td>
                    <span
                      class="status <%= course.isActive ? 'active' : 'inactive' %>"
                    >
                      <%= course.isActive ? 'Active' : 'Inactive' %>
                    </span>
                  </td>
                  <td>
                    <div class="action-buttons">
                      <a href="/courses/<%= course._id %>" class="btn">View</a>
                      <a href="/courses/<%= course._id %>/edit" class="btn"
                        >Edit</a
                      >
                      <form
                        action="/courses/<%= course._id %>?_method=DELETE"
                        method="POST"
                      >
                        <button
                          type="submit"
                          class="btn delete-btn"
                          onclick="return confirm('Are you sure?')"
                        >
                          Delete
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <% } else { %>
          <p>No Courses found.</p>
          <% } %>
        </div>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const deleteForms = document.querySelectorAll('form[action*="delete"]');
        deleteForms.forEach((form) => {
          form.addEventListener("submit", function (e) {
            if (!confirm("Are you sure you want to delete this student?")) {
              e.preventDefault();
            }
          });
        });
      });
    </script>
  </body>
</html>
