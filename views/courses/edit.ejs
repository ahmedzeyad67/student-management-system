<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/add-edit-page.css" />
    <link rel="icon" href="/icons/logo.svg" />
    <title>Edit Course</title>
  </head>
  <body>
    <div class="page-container">
      <div class="content-container">
        <div class="header">
          <h1>Edit Course</h1>
        </div>

        <div class="content">
          <% if (typeof error !== 'undefined' && error) { %>
          <div class="error"><%= error %></div>
          <% } %>

          <form action="/courses/<%= course._id %>?_method=PUT" method="POST">
            <div class="form-group">
              <label>Course Code</label>
              <input
                type="text"
                disabled
                name="courseCode"
                value="<%= course.courseCode %>"
                style="cursor: not-allowed"
              />
            </div>

            <div class="title-credits-group">
              <div class="form-group">
                <label>Title</label>
                <input
                  type="text"
                  name="title"
                  id="title"
                  value="<%= course.title %>"
                  required
                />
              </div>

              <div class="form-group">
                <label>Credit Hours</label>
                <input
                  type="number"
                  name="creditHours"
                  id="creditHours"
                  value="<%= course.creditHours %>"
                  required
                />
              </div>
            </div>

            <div class="form-group">
              <label>Department</label>
              <input
                type="text"
                name="department"
                id="department"
                value="<%= course.department %>"
                required
              />
            </div>

            <div class="form-group">
              <label>Prerequisites</label>
              <select name="prerequisites" id="prerequisites" multiple>
                <% allCourses.forEach(function(c) { %>
                  <% if (c.courseCode !== course.courseCode) { %>
                    <option value="<%= c.courseCode %>" <%= (course.prerequisites || []).includes(c.courseCode) ? 'selected' : '' %>>
                      <%= c.courseCode %> - <%= c.title %>
                    </option>
                  <% } %>
                <% }) %>
              </select>
              <h5 class="prerequisites-help">Hold Ctrl/Cmd to select multiple</h5>
            </div>

            <div class="schedule-section">
              <h3>Schedule Information</h3>
              <div class="form-group">
                <label>Days</label>
                <div class="days-field">
                  <% ['Sat', 'Sun', 'Mon', 'Tue', 'Wed', 'Thu'].forEach(day => {
                  %>
                  <div class="day-checkbox">
                    <input type="checkbox" name="days" value="<%= day %>" <%=
                    (course.days || []).includes(day) ? 'checked' : '' %> />
                    <label> <%= day %> </label>
                  </div>
                  <% }) %>
                </div>
              </div>

              <div class="form-group status-checkbox">
                <input type="checkbox" name="isActive" <%= course.isActive ?
                'checked' : '' %> />
                <label>Active Course</label>
              </div>
            </div>

            <div class="actions-bar">
              <button type="submit" class="btn">Update Course</button>
              <a href="/courses/<%= course._id %>" class="btn">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
