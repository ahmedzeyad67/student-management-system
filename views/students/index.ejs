<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/show-all-page.css" />
    <title>Student Management</title>
    <link rel="icon" href="/icons/logo.svg" />
  </head>
  <body>
    <div class="page-container">
      <div class="content-container">
        <div class="header">
          <h1>Student Management</h1>
        </div>
        <div class="content">
          <div class="actions-bar">
            <a class="btn" href="/students/new">Add New Student</a>
            <a class="btn" href="/students/search">Search</a>
            <a class="btn" href="../">Back to home page</a>
          </div>

          <% if (typeof success !== 'undefined' && success) { %>
          <div class="success"><%= success %></div>
          <% } %> <% if (typeof error !== 'undefined' && error) { %>
          <div class="error"><%= error %></div>
          <% } %>

          <h2 class="table-title">Student List</h2>
          <% if (students && students.length > 0) { %>
          <div class="table-container">
            <table>
              <thead>
                <tr>
                  <th>ID</th>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Department</th>
                  <th>Enrollment Date</th>
                  <th>Status</th>
                  <th>GPA</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                <% students.forEach(student => { %>
                <tr>
                  <td><%= student.studentId %></td>
                  <td><%= student.firstName %> <%= student.lastName %></td>
                  <td><%= student.email %></td>
                  <td><%= student.department %></td>
                  <td><%= student.enrollmentDate.toLocaleDateString() %></td>
                  <td>
                    <span
                      class="status <%= student.isActive ? 'active' : 'inactive' %>"
                    >
                      <%= student.isActive ? 'Active' : 'Inactive' %>
                    </span>
                  </td>
                  <td><%= student.GPA.toFixed(2) %></td>
                  <td>
                    <div class="action-buttons">
                      <a href="/students/<%= student.studentId %>" class="btn"
                        >View
                      </a>
                      <a
                        href="/students/<%= student.studentId %>/edit"
                        class="btn"
                        >Edit
                      </a>
                      <form
                        action="/students/<%= student.studentId %>?_method=DELETE"
                        method="POST"
                      >
                        <button
                          type="submit"
                          class="btn delete-btn"
                          onclick="return confirm('Are you sure?')"
                        >
                          Delete
                        </button>
                      </form>
                    </div>
                  </td>
                </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
          <% } else { %>
          <p>No students found.</p>
          <% } %>
        </div>
      </div>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const deleteForms = document.querySelectorAll('form[action*="delete"]');
        deleteForms.forEach((form) => {
          form.addEventListener("submit", function (e) {
            if (!confirm("Are you sure you want to delete this student?")) {
              e.preventDefault();
            }
          });
        });
      });
    </script>
  </body>
</html>
