<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles/add-edit-page.css" />
    <title>Edit Student</title>
  </head>
  <body>
    <div class="page-container">
      <div class="content-container">
        <div class="header">
          <h1>Edit Student</h1>
        </div>
        <div class="content">
          <% if (typeof error !== 'undefined' && error) { %>
          <div class="error"><%= error %></div>
          <% } %>

          <form
            action="/students/<%= student.studentId %>?_method=PUT"
            method="POST"
          >
            <div class="form-group">
              <label>Student ID</label>
              <input
                type="text"
                name="studentId"
                disabled
                value="<%= student.studentId %>"
                style="cursor: not-allowed"
              />
            </div>

            <div class="name-group">
              <div class="form-group">
                <label>First Name</label>
                <input
                  type="text"
                  name="firstName"
                  id="firstName"
                  value="<%= student.firstName %>"
                  required
                />
              </div>

              <div class="form-group">
                <label>Last Name</label>
                <input
                  type="text"
                  name="lastName"
                  id="lastName"
                  value="<%= student.lastName %>"
                  required
                />
              </div>
            </div>

            <div class="form-group">
              <label>Email</label>
              <input
                type="email"
                name="email"
                id="email"
                value="<%= student.email %>"
                required
              />
            </div>

            <div class="department-enrollment-group">
              <div class="form-group">
                <label>Department</label>
                <select name="department" id="department" required>
                  <% ['General', 'IS', 'CS', 'IT', 'AI'].forEach(dept => { %>
                    <option value="<%= dept %>" <%= student.department === dept ?
                    'selected' : '' %>>
                      <%= dept %>
                    </option>
                  <% }); %>
                </select>
              </div>
              <div class="form-group">
                <label>Enrollment Date</label>
                <input
                  type="date"
                  name="enrollmentDate"
                  id="enrollmentDate"
                  value="<%= typeof student.enrollmentDate === 'string' ? 
                  student.enrollmentDate : 
                  (student.enrollmentDate instanceof Date ? student.enrollmentDate.toISOString().split('T')[0] : '') %>"
                  required
                />
              </div>
            </div>

            <div class="form-group status-checkbox">
              <input type="checkbox" name="isActive" <%= student.isActive ?
              'checked' : '' %> />
              <label>Active Student</label>
            </div>

            <div class="address-info-section">
              <h3>Address Information</h3>
              <div class="form-group">
                <label>City</label>
                <input
                  type="text"
                  name="address[city]"
                  id="city"
                  value="<%= student.address && student.address.city || '' %>"
                />
              </div>

              <div class="form-group">
                <label>Street</label>
                <input
                  type="text"
                  name="address[street]"
                  id="street"
                  value="<%= student.address && student.address.street || '' %>"
                />
              </div>
            </div>

            <div class="actions-bar">
              <button type="submit" class="btn">Update Student</button>
              <a href="/students/<%= student.studentId %>" class="btn"
                >Cancel</a
              >
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
